<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="400.0" prefWidth="600.0" styleClass="main-bg" stylesheets="@../resources/Background2.css"
            xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
fx:controller="controller.AddController">
   <top>
      <VBox alignment="CENTER" prefHeight="78.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Agregar Estacion o Terminal" textFill="WHITE">
               <font>
                  <Font name="Times New Roman Bold Italic" size="41.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Nombre: " textFill="WHITE">
                     <font>
                        <Font name="Times New Roman Bold Italic" size="25.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameTF" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="82.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Capacidad: " textFill="WHITE">
                     <font>
                        <Font name="Times New Roman Bold Italic" size="25.0" />
                     </font>
                  </Label>
                  <TextField fx:id="capacityTF" />
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="132.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Rutas: " textFill="WHITE">
                     <font>
                        <Font name="Times New Roman Bold Italic" size="25.0" />
                     </font>
                  </Label>
                  <TextField fx:id="routeTF" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="78.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#add" text="Agregar">
               <font>
                  <Font name="Times New Roman Bold Italic" size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#regresarVentana" text="Regresar " textAlignment="CENTER">
               <font>
                  <Font name="Arial Bold" size="17.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
